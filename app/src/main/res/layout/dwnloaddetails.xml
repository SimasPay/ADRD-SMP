<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F3F3F3"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:background="@color/reg">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:gravity="center"
            android:text="@string/transaksi"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/back_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/btnBacke"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/btn_back_register" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#F3F3F3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sample"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20.0dip"
                    android:gravity="center"
                    android:text="Silakan pilih periode transaksi yang ingin Anda lihat"
                    android:textColor="#ff59626c"
                    android:textSize="18dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/sample1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="yang ingin Anda lihat"
                    android:textColor="#ff59626c"
                    android:textSize="18dp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:id="@+id/current_month"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:layout_marginTop="15.0dip"
                    android:orientation="horizontal"
                    android:padding="10.0dip"
                    android:paddingBottom="5.0dip"
                    android:paddingTop="5.0dip">

                    <ImageView
                        android:id="@+id/current_month_checkbox"
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_gravity="left"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="15.0dip"
                        android:src="@drawable/selected" />

                    <TextView
                        android:id="@+id/current_month_textView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15.0dip"
                        android:gravity="left"
                        android:text="Bulan ini"
                        android:textColor="#ff535d66"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/onemonth"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:layout_marginTop="15.0dip"
                    android:orientation="horizontal"
                    android:padding="10.0dip">

                    <ImageView
                        android:id="@+id/onemonth_checkbox"
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15.0dip"
                        android:src="@drawable/dwnunselected" />

                    <TextView
                        android:id="@+id/onemonth_textView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15.0dip"
                        android:gravity="left"
                        android:text="Bulan lalu"
                        android:textColor="#ff535d66"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/twomonths_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:layout_marginTop="15.0dip"
                    android:orientation="horizontal"
                    android:padding="10.0dip">

                    <ImageView
                        android:id="@+id/twomonths_checkbox"
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15.0dip"
                        android:src="@drawable/dwnunselected" />

                    <TextView
                        android:id="@+id/twomonths_textView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15.0dip"
                        android:gravity="left"
                        android:text="2 bulan lalu"
                        android:textColor="#ff535d66"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/manual_selection_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:layout_marginTop="15.0dip"
                    android:orientation="vertical"
                    android:padding="10.0dip">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/manual_selection_checkbox"
                            android:layout_width="30.0dip"
                            android:layout_height="30.0dip"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15.0dip"
                            android:src="@drawable/dwnunselected" />

                        <TextView
                            android:id="@+id/manual_enter_from"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15.0dip"
                            android:gravity="center_vertical"
                            android:text="Periode dari"
                            android:textColor="#ff535d66"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/fromButton"
                            android:layout_width="fill_parent"
                            android:layout_height="35.0dip"
                            android:layout_marginLeft="5dp"
                            android:drawableRight="@drawable/ic_calendar"
                            android:paddingRight="10dp"
                            android:textSize="14sp"
                            android:text="DD-MM-YYYY"
                            android:background="@drawable/custom_selectordate" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="15.0dip"
                        android:layout_marginLeft="45.0dip"
                        android:layout_marginRight="15.0dip"
                        android:layout_marginTop="15.0dip"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/manual_enter_to"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="Hingga"
                            android:textColor="#ff535d66"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/toButton"
                            android:layout_width="fill_parent"
                            android:layout_height="35.0dip"
                            android:layout_marginLeft="5dp"
                            android:drawableRight="@drawable/ic_calendar"
                            android:textSize="14dp"
                            android:paddingRight="10dp"
                            android:text="DD-MM-YYYY"
                            android:background="@drawable/custom_selectordate" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="#F3F3F3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#F3F3F3">

                <Button
                    android:id="@+id/downLoad_ss"
                    android:layout_width="220dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/login_color_red"
                    android:text="Lanjut"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>