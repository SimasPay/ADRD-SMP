<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:text="Masukkan Kode OTP"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/number_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Kode OTP dan link telah dikirimkan ke nomor 08881234567. Masukkan kode tersebut atau akses link yang tersedia."
                android:textColor="#8a000000"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/otpCode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/reg"
                android:digits="1234567890"
                android:hint="6 digit kode OTP"
                android:textColorHint="#61000000"
                android:inputType="number"
                android:textColor="#61000000"
                android:textSize="17dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"
                android:layout_marginTop="10dp"
                android:background="#787878" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginTop="10dp"
                android:gravity="right|center"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/Cancel"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="BATAL"
                    android:textColor="#cc0000"
                    android:textSize="14dp" />

                <Button

                    android:id="@+id/ok"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="OK"
                    android:textColor="#cc0000"
                    android:textSize="14dp" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>


