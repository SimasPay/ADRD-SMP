<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.dimo.PayByQR.QrStore.view.StoreKonfirmasiActivity">

    <include
        android:id="@+id/activity_store_actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header_bar" />

    <RelativeLayout
        android:id="@+id/activity_store_confirm_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/store_line_checkout"/>
        <ProgressBar
            android:id="@+id/activity_store_confirm_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone"/>
        <com.dimo.PayByQR.view.DIMOButton
            android:id="@+id/activity_store_btn_konfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:paddingLeft="56dp"
            android:paddingRight="56dp"
            android:text="@string/bt_store_konfirmasi"
            android:textColor="@color/theme_text_over_basic_bg"
            dimo:bgColor="@color/theme_colorPrimary"
            dimo:buttonSize="normal"
            dimo:font="@string/font_helvetica"
            android:visibility="visible" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/activity_store_confirm_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_store_actionBar"
        android:layout_above="@id/activity_store_confirm_footer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:background="@color/theme_bg_light_gray">

                <com.dimo.PayByQR.view.DIMOTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/tx_store_keranjang_bel"
                    android:textColor="@color/theme_black"
                    android:textSize="@dimen/text_size_20"
                    dimo:font="@string/font_helvetica"/>

                <!-- Cart list here -->
                <LinearLayout
                    android:id="@+id/activity_store_cart_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--<ListView
                        android:id="@+id/act_basket_list"
                        android:layout_below="@+id/frame_popup_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">
                    </ListView>-->
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/activity_store_confirm_shipping_fee_line"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_store_confirm_shipping_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:maxWidth="200dp"
                        android:gravity="right"
                        android:text="Rp 70,000"
                        android:textColor="@color/store_text_checkout"
                        android:textSize="@dimen/text_size_16"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/activity_store_confirm_shipping_fee"
                        android:paddingRight="8dp"
                        android:text="@string/tx_store_total_ship"
                        android:textColor="@color/store_text_checkout"
                        android:textSize="@dimen/text_size_16"
                        dimo:font="@string/font_helvetica"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/store_line_checkout"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/activity_store_confirm_total_paid_line"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_store_confirm_total_paid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:maxWidth="200dp"
                        android:gravity="right"
                        android:text="Rp 2,770,000"
                        android:textColor="@color/store_text_checkout"
                        android:textSize="@dimen/text_size_16"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/activity_store_confirm_total_paid"
                        android:paddingRight="8dp"
                        android:text="@string/tx_store_total_bayar"
                        android:textColor="@color/store_text_checkout"
                        android:textSize="@dimen/text_size_16"
                        dimo:font="@string/font_helvetica"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/activity_store_confirm_pickup_method_line"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_store_confirm_pickup_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="ADDRESS"
                        android:textColor="@color/store_text_checkout"
                        android:textSize="@dimen/text_size_16"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/activity_store_confirm_pickup_method"
                        android:paddingRight="8dp"
                        android:maxWidth="200dp"
                        android:text="@string/tx_store_total_pickup"
                        android:textColor="@color/store_text_checkout"
                        android:textSize="@dimen/text_size_16"
                        dimo:font="@string/font_helvetica"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/store_line_checkout"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/activity_store_confirm_shipping_name_line"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_store_confirm_shipping_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:maxWidth="200dp"
                        android:gravity="right"
                        android:text="Rhio Sianturi"
                        android:textColor="@color/store_text_checkout"
                        android:textSize="@dimen/text_size_16"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/activity_store_confirm_shipping_name"
                        android:paddingRight="8dp"
                        android:text="@string/tx_store_total_nama"
                        android:textColor="@color/store_text_checkout"
                        android:textSize="@dimen/text_size_16"
                        dimo:font="@string/font_helvetica"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/store_line_checkout"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/activity_store_confirm_shipping_phone_line"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_store_confirm_shipping_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:maxWidth="200dp"
                        android:gravity="right"
                        android:text="08119854511"
                        android:textColor="@color/store_text_checkout"
                        android:textSize="@dimen/text_size_16"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/activity_store_confirm_shipping_phone"
                        android:paddingRight="8dp"
                        android:text="@string/tx_store_total_phone"
                        android:textColor="@color/store_text_checkout"
                        android:textSize="@dimen/text_size_16"
                        dimo:font="@string/font_helvetica"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/store_line_checkout"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/activity_store_confirm_shipping_city_line"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_store_confirm_shipping_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:maxWidth="200dp"
                        android:gravity="right"
                        android:text="JAKARTA"
                        android:textColor="@color/store_text_checkout"
                        android:textSize="@dimen/text_size_16"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/act_store_konfirmasi_city_str"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/activity_store_confirm_shipping_city"
                        android:paddingRight="8dp"
                        android:text="@string/tx_store_pick_city"
                        android:textColor="@color/store_text_checkout"
                        android:textSize="@dimen/text_size_16"
                        dimo:font="@string/font_helvetica"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/store_line_checkout"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/activity_store_confirm_shipping_addr_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_store_confirm_shipping_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:maxWidth="200dp"
                        android:gravity="right"
                        android:lineSpacingExtra="4dp"
                        android:text="PLAZA PERMATA\n10TH FLOOR,\nMH. THAMRIN 57,\nJAKARTA"
                        android:textColor="@color/store_text_checkout"
                        android:textSize="@dimen/text_size_16"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/activity_store_confirm_shipping_addr"
                        android:paddingRight="8dp"
                        android:text="@string/tx_store_pick_address"
                        android:textColor="@color/store_text_checkout"
                        android:textSize="@dimen/text_size_16"
                        dimo:font="@string/font_helvetica"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>