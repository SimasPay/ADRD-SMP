<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Verifikasi OTP"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <ProgressBar
                    android:id="@+id/progressbar"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/number_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Kode OTP dan link telah dikirimkan ke nomor 08881234567. Masukkan kode tersebut atau akses link yang tersedia."
                android:textColor="#8a000000"
                android:textSize="17dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/otpCode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/reg"
                    android:digits="1234567890"
                    android:hint="6 digit kode OTP"
                    android:imeActionLabel="@string/done_label"
                    android:inputType="number"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#61000000"
                    android:textColorHint="#61000000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center"
                    android:layout_alignParentRight="true"
                    android:text="1234"
                    android:textSize="14dp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"
                android:layout_marginTop="10dp"
                android:background="#787878" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginTop="10dp"
                android:gravity="right|center"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/Cancel"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="BATAL"
                    android:textColor="#cc0000"
                    android:textSize="14dp" />

                <Button

                    android:id="@+id/ok"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="OK"
                    android:textColor="#cc0000"
                    android:textSize="14dp" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>


