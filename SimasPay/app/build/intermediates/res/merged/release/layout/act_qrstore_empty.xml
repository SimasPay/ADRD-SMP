<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dimo.PayByQR.QrStore.view.StoreEmpty">

    <include layout="@layout/header_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" >
        <LinearLayout
            android:id="@+id/activity_store_mercanttx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="48dp"
            android:orientation="vertical">
            <com.dimo.PayByQR.view.DIMOTextView
                android:id="@+id/store_empt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:lineSpacingExtra="4dp"
                android:lineSpacingMultiplier="1.5"
                android:gravity="center"
                android:text="@string/tx_store_empty_1"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/no_connection_button_close"
                android:drawablePadding="4dp"
                android:background="@drawable/background_rect_gray"
                dimo:font="@string/font_helvetica"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_store_menu_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="36dp"
            android:paddingBottom="36dp"
            android:gravity="center"
            android:orientation="vertical">
                <com.dimo.PayByQR.view.DIMOButton
                    android:id="@+id/activity_store_mulai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="48dp"
                    android:paddingRight="48dp"
                    android:text="@string/bt_store_start_shop"
                    android:textColor="@color/theme_text_over_basic_bg"
                    dimo:bgColor="@color/no_connection_button_close"
                    dimo:buttonSize="normal"
                    dimo:font="@string/font_helvetica"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>