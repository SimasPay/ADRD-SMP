<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dimo.PayByQR.QrStore.view.StoreMenuActivity">

    <include layout="@layout/header_bar" />

    <RelativeLayout
        android:id="@+id/activity_store_menu_layout_empty_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/activity_store_mercanttx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="48dp"
            android:orientation="vertical">
            <com.dimo.PayByQR.view.DIMOTextView
                android:id="@+id/store_empt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:lineSpacingExtra="4dp"
                android:lineSpacingMultiplier="1.5"
                android:gravity="center"
                android:text="@string/tx_store_empty_1"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/no_connection_button_close"
                android:drawablePadding="4dp"
                android:background="@drawable/background_rect_gray"
                dimo:font="@string/font_helvetica"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="36dp"
            android:paddingBottom="36dp"
            android:gravity="center"
            android:orientation="vertical">
            <com.dimo.PayByQR.view.DIMOButton
                android:id="@+id/activity_store_mulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="48dp"
                android:paddingRight="48dp"
                android:text="@string/bt_store_start_shop"
                android:textColor="@color/theme_text_over_basic_bg"
                dimo:bgColor="@color/no_connection_button_close"
                dimo:buttonSize="normal"
                dimo:font="@string/font_helvetica"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/activity_store_menu_layout_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/activity_store_menu_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/white">
                <com.dimo.PayByQR.view.DIMOTextView
                    android:id="@+id/activity_store_menu_total_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:gravity="right"
                    android:text="Rp 2,770,000"
                    android:textColor="@color/theme_black"
                    android:textSize="@dimen/text_size_20"
                    dimo:font="@string/font_helvetica"/>
                <com.dimo.PayByQR.view.DIMOTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/activity_store_menu_total_paid"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="8dp"
                    android:gravity="left"
                    android:text="@string/tx_store_pre_total"
                    android:textColor="@color/theme_black"
                    android:textSize="@dimen/text_size_20"
                    dimo:font="@string/font_helvetica"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/store_line_checkout"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/store_line_checkout"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:gravity="center"
                android:background="@color/theme_bg_light_gray"
                android:orientation="vertical">
                <com.dimo.PayByQR.view.DIMOButton
                    android:id="@+id/activity_store_menu_btn_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/bt_store_checkout"
                    android:textColor="@color/theme_text_over_basic_bg"
                    android:drawablePadding="4dp"
                    dimo:bgColor="@color/theme_colorPrimary"
                    dimo:buttonSize="normal"
                    dimo:font="@string/font_helvetica"/>
                <com.dimo.PayByQR.view.DIMOButton
                    android:id="@+id/activity_store_menu_btn_add_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingLeft="36dp"
                    android:paddingRight="36dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/bt_store_add_more"
                    android:textColor="@color/theme_text_over_basic_bg"
                    android:drawablePadding="4dp"
                    dimo:bgColor="@color/no_connection_button_close"
                    dimo:buttonSize="normal"
                    dimo:font="@string/font_helvetica"/>
            </LinearLayout>
        </LinearLayout>
        <ListView
            android:id="@+id/listview"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:layout_above="@id/activity_store_menu_footer"
            android:dividerHeight="1dp"
            android:divider="@color/store_line_checkout"/>
    </RelativeLayout>
</LinearLayout>