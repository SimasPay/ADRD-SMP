<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        dimo:contentInsetStart="0dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/header_bar" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/store_checkout_step_progress"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/store_checkout_step_progress"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="0.5dp"
                    android:background="@color/store_checkout_step_progress_disable"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <com.dimo.PayByQR.view.DIMOButton
            android:id="@+id/activity_store_btn_lanjut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_alignParentBottom="true"
            android:text="@string/bt_store_lanjut"
            android:textColor="@android:color/white"
            dimo:bgColor="@color/theme_colorPrimary"
            dimo:dimoButtonSize="normal"
            dimo:font="@string/font_helvetica" />

        <RelativeLayout
            android:id="@+id/checkout_pickup_method_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">
            <LinearLayout
                android:id="@+id/checkout_pickup_method_layout_choices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <com.dimo.PayByQR.view.DIMOTextView
                    android:id="@+id/checkout_pickup_method_1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:drawableLeft="@drawable/ic_check_state"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="Method 1"
                    android:textColor="@color/text_store_pickup_method"
                    android:textSize="14dp"
                    android:clickable="true"
                    android:background="@drawable/ripple_store_pickup_method"
                    dimo:font="@string/font_helvetica"/>
                <com.dimo.PayByQR.view.DIMOTextView
                    android:id="@+id/checkout_pickup_method_2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:drawableLeft="@drawable/ic_check_state"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="Method 2"
                    android:textColor="@color/text_store_pickup_method"
                    android:textSize="14dp"
                    android:clickable="true"
                    android:background="@drawable/ripple_store_pickup_method"
                    dimo:font="@string/font_helvetica"/>
            </LinearLayout>
            <com.dimo.PayByQR.view.DIMOTextView
                android:id="@+id/checkout_pickup_method_layout_single"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:drawableLeft="@drawable/ic_check_state"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="(Pickup Method Name)"
                android:textColor="@color/text_store_pickup_method"
                android:textSize="14dp"
                android:enabled="true"
                dimo:font="@string/font_helvetica"
                android:visibility="gone"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/checkout_pickup_method_layout"
            android:layout_above="@id/activity_store_btn_lanjut">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/checkout_pickup_method_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/store_cart_item_name"
                        android:textSize="14dp"
                        android:text="@string/tx_store_total_address"
                        android:visibility="visible"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOEditText
                        android:id="@+id/activity_store_confirm_shipping_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="17dp"
                        android:paddingBottom="17dp"
                        android:minHeight="48dp"
                        android:background="@drawable/background_store_edittext"
                        android:gravity="left"
                        android:lineSpacingExtra="4dp"
                        android:hint="@string/tx_store_checout_alamat_hint"
                        android:text=""
                        android:textColorHint="@color/store_cart_item_qty_btn"
                        android:textColor="@color/store_cart_item_name"
                        android:textSize="14dp"
                        dimo:font="@string/font_helvetica"/>
                    <LinearLayout
                        android:id="@+id/checkout_pickup_method_address_choose_city_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/background_store_edittext"
                        android:orientation="vertical">
                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/activity_store_kota_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:dropDownWidth="wrap_content"
                            android:spinnerMode="dropdown"/>
                        <RelativeLayout
                            android:id="@+id/checkout_pickup_method_address_shippingfee_layout"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:visibility="gone">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentTop="true"
                                android:background="#e6e6e6"/>
                            <com.dimo.PayByQR.view.DIMOTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="12dp"
                                android:text="@string/tx_store_checout_shipping_fee_hint"
                                android:textColor="@color/store_cart_item_qty_btn"
                                android:textSize="14dp"
                                dimo:font="@string/font_helvetica"/>
                            <com.dimo.PayByQR.view.DIMOTextView
                                android:id="@+id/activity_store_confirm_shipping_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="12dp"
                                android:text="Rp 0"
                                android:textColor="@color/store_cart_item_qty_btn"
                                android:textSize="14dp"
                                dimo:font="@string/font_helvetica"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/checkout_pickup_method_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/background_store_edittext"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/activity_store_toko_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:dropDownWidth="wrap_content"
                        android:spinnerMode="dropdown"/>
                    <RelativeLayout
                        android:id="@+id/checkout_pickup_method_store_address_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentTop="true"
                            android:background="#e6e6e6"/>
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/checkout_pickup_method_store_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="17dp"
                            android:layout_marginBottom="17dp"
                            android:lineSpacingExtra="4dp"
                            android:text=""
                            android:textColor="@color/store_cart_item_name"
                            android:textSize="14dp"
                            dimo:font="@string/font_helvetica"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>