<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        dimo:contentInsetStart="0dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/header_bar" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/store_checkout_step_progress"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:background="@color/store_checkout_step_progress"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="0.5dp"
                    android:background="@color/store_checkout_step_progress"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <LinearLayout
            android:id="@+id/activity_store_confirm_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/store_cart_footer_bg"
            android:elevation="8dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <com.dimo.PayByQR.view.DIMOTextView
                    android:id="@+id/activity_store_confirm_total_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="Rp 0"
                    android:textColor="@color/store_cart_item_name"
                    android:textSize="16dp"
                    dimo:font="@string/font_helvetica_medium"/>
                <com.dimo.PayByQR.view.DIMOTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/activity_store_confirm_total_paid"
                    android:paddingRight="8dp"
                    android:gravity="left"
                    android:text="@string/tx_store_total_bayar"
                    android:textColor="@color/store_cart_item_name"
                    android:textSize="16dp"
                    dimo:font="@string/font_helvetica"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/activity_store_confirm_loader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:visibility="visible"/>
                <com.dimo.PayByQR.view.DIMOButton
                    android:id="@+id/activity_store_btn_konfirmasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/bt_store_konfirmasi"
                    android:textColor="@android:color/white"
                    dimo:bgColor="@color/theme_colorPrimary"
                    dimo:dimoButtonSize="normal"
                    dimo:font="@string/font_helvetica"
                    android:visibility="visible"/>
            </RelativeLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@id/activity_store_confirm_footer">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="@drawable/background_store_edittext">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/text_header_title_checkout_1"
                        android:textColor="@color/store_cart_item_name"
                        android:textSize="16dp"
                        dimo:font="@string/font_helvetica_medium"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_store_confirm_shipping_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="(Name)"
                        android:textColor="@color/store_cart_item_name"
                        android:textSize="14dp"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_store_confirm_shipping_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="(Phone)"
                        android:textColor="@color/store_cart_item_name"
                        android:textSize="14dp"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_store_confirm_shipping_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="(E-mail)"
                        android:textColor="@color/store_cart_item_name"
                        android:textSize="14dp"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_store_confirm_pickup_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/tx_store_confirm_pickup_method"
                        android:textColor="@color/store_cart_item_name"
                        android:textSize="14dp"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_store_confirm_shipping_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:lineSpacingExtra="2dp"
                        android:text="(address 1)"
                        android:textColor="@color/store_cart_item_name"
                        android:textSize="14dp"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_store_confirm_shipping_addr2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(address 2)"
                        android:textColor="@color/store_cart_item_name"
                        android:textSize="14dp"
                        dimo:font="@string/font_helvetica"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:text="@string/tx_store_keranjang_bel"
                        android:textColor="@color/store_cart_item_name"
                        android:textSize="16dp"
                        dimo:font="@string/font_helvetica_medium"/>
                    <!-- Cart list here -->
                    <LinearLayout
                        android:id="@+id/activity_store_cart_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical">
                        <!--<include layout="@layout/act_keranjang_each" />
                        <include layout="@layout/act_keranjang_each" />
                        <include layout="@layout/act_keranjang_each" />-->
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/activity_store_confirm_total_amount_line"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/activity_store_confirm_total_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="Rp 0"
                            android:textColor="@color/store_cart_item_name"
                            android:textSize="16dp"
                            dimo:font="@string/font_helvetica"/>
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/activity_store_confirm_total_amount"
                            android:paddingRight="8dp"
                            android:text="@string/tx_store_total_harga_barang"
                            android:textColor="@color/store_cart_item_name"
                            android:textSize="16dp"
                            dimo:font="@string/font_helvetica"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentTop="true"
                            android:background="#e6e6e6"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/activity_store_confirm_shipping_fee_line"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/activity_store_confirm_shipping_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="Rp 0"
                            android:textColor="@color/store_cart_item_name"
                            android:textSize="16dp"
                            dimo:font="@string/font_helvetica"/>
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/activity_store_confirm_shipping_fee"
                            android:paddingRight="8dp"
                            android:text="@string/tx_store_total_ship"
                            android:textColor="@color/store_cart_item_name"
                            android:textSize="16dp"
                            dimo:font="@string/font_helvetica"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentTop="true"
                            android:background="#e6e6e6"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>