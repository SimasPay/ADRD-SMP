<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"

    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="450dp"

    >



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:weightSum="3"
        android:layout_centerHorizontal="false"
        android:layout_alignParentBottom="true"
        android:background="@color/loyalty_list_desc"
        android:id="@+id/linearLayout">



    <RelativeLayout
        android:id="@+id/activity_store_confirm_total_paid_line"
        android:layout_width="match_parent"
        android:background="@color/theme_btn_redeem_point"
        android:layout_height="48dp"
        >
        <com.dimo.PayByQR.view.DIMOTextView
            android:id="@+id/frame_popup_selesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="SELESAI"
            android:clickable="true"
            android:background="@color/theme_btn_redeem_point"
            android:textColor="@color/theme_btn_OK"
            android:textSize="@dimen/text_size_18"
            dimo:font="@string/font_helvetica"/>
        <com.dimo.PayByQR.view.DIMOTextView
            android:id="@+id/frame_popup_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/frame_popup_selesai"
            android:layout_toRightOf="@+id/frame_popup_batal"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="HEADER"
            android:background="@color/theme_btn_redeem_point"
            android:textColor="@color/theme_btn_OK"
            android:textSize="@dimen/text_size_18"
            dimo:font="@string/font_helvetica"/>
        <com.dimo.PayByQR.view.DIMOTextView
            android:id="@+id/frame_popup_batal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="30dp"
            android:clickable="true"
            android:text="BATAL"
            android:background="@color/theme_btn_redeem_point"
            android:textColor="@color/theme_btn_OK"
            android:textSize="@dimen/text_size_18"
            dimo:font="@string/font_helvetica"
           />
    </RelativeLayout>

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView_selection"



            android:layout_gravity="center_horizontal" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <ListView
                    android:id="@+id/listview_selection"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:alpha="0.5"
                    android:dividerHeight="1dp"
                    android:divider="@color/store_line_checkout"/>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</RelativeLayout>