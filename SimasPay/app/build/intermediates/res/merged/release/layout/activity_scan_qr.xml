<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_scanqr_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.dimo.PayByQR.activity.ScanQRActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.25">

        <com.journeyapps.barcodescanner.CompoundBarcodeView
            android:id="@+id/activity_scanqr_barcodeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/activity_scanqr_systemBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <RelativeLayout
            android:id="@+id/activity_scanqr_layout_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_scanqr_systemBar"
            android:padding="@dimen/activity_horizontal_margin"
            android:background="@color/theme_bg_scanQR_frame">
            <ImageView
                android:id="@+id/activity_scanqr_btn_close"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:background="@drawable/background_circle_gray_transparent"
                android:src="@drawable/ico_x"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:id="@+id/activity_scanqr_btn_flash"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_toLeftOf="@id/activity_scanqr_btn_close"
                android:layout_marginRight="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="@drawable/background_btn_flash_gray"
                android:animateLayoutChanges="true">
                <ImageView
                    android:id="@+id/activity_scanqr_img_flash"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="4dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ico_flash"
                    android:scaleType="fitCenter"/>
                <com.dimo.PayByQR.view.DIMOTextView
                    android:id="@+id/activity_scanqr_txt_flash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/button_flash_off"
                    android:textColor="@color/theme_text_over_basic_bg"
                    android:textSize="16sp"
                    dimo:font="@string/font_montserrat"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_scanqr_layout_action"
            android:weightSum="10">
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@color/theme_bg_scanQR_frame"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7">
                <!--<View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/activity_scanqr_frame"
                    android:layout_alignBottom="@id/activity_scanqr_frame"
                    android:layout_alignLeft="@id/activity_scanqr_frame"
                    android:layout_alignRight="@id/activity_scanqr_frame"
                    android:background="@drawable/background_scanqr_frame"/>-->
                <ImageView
                    android:id="@+id/activity_scanqr_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/middle_qrscan"
                    android:background="@drawable/background_scanqr_frame"
                    android:adjustViewBounds="true"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_above="@id/activity_scanqr_frame"
                    android:background="@color/theme_bg_scanQR_frame"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/activity_scanqr_frame"
                    android:background="@color/theme_bg_scanQR_frame"/>
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@color/theme_bg_scanQR_frame"/>
        </LinearLayout>
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_scanqr_footer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.75"
        android:background="@color/theme_colorPrimary">
        <LinearLayout
            android:id="@+id/activity_scanqr_serviceby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/aserviceby"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/activity_scanqr_serviceby"
            android:gravity="center"
            android:orientation="vertical">

            <com.dimo.PayByQR.view.DIMOTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_scanqr_tutorial"
                android:textColor="@color/theme_text_over_basic_bg"
                android:textSize="@dimen/text_size_20"
                dimo:font="@string/font_helvetica"
                android:id="@+id/act_text_Please_scan"/>

            <LinearLayout
                android:id="@+id/activity_scanqr_btn_store"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_small_height"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:background="@drawable/background_cart_qty"
                android:gravity="center"
                android:visibility="visible">
                <com.dimo.PayByQR.view.DIMOTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text="@string/tx_qr_store_bt"
                    android:textColor="@color/theme_text_over_basic_bg"
                    android:textSize="@dimen/text_size_18"
                    dimo:font="@string/font_helvetica"/>
                <com.dimo.PayByQR.view.DIMOTextView
                    android:id="@+id/item_merchant_qty"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text="99"
                    android:textColor="@color/theme_colorPrimary"
                    android:textSize="@dimen/text_size_18"
                    android:background="@drawable/background_circle_discount"
                    dimo:font="@string/font_helvetica"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
