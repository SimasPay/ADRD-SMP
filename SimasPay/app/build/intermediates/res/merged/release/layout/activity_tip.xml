<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dimo.PayByQR.activity.TipActivity">

    <include layout="@layout/header_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/activity_tip_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@color/theme_colorPrimary"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_tip_left_right"
                    android:paddingRight="@dimen/padding_tip_left_right"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/activity_tip_originalAmount_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/activity_tip_originalAmount_curr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="@string/text_detail_currency"
                            android:textColor="@color/theme_text_over_basic_bg"
                            android:textSize="@dimen/text_size_24"
                            dimo:font="@string/font_montserrat"/>
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/activity_tip_originalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/theme_text_over_basic_bg"
                            android:textSize="@dimen/text_size_40"
                            dimo:font="@string/font_montserrat_bold"/>
                    </LinearLayout>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/margin_tip_text_top_bottom"
                        android:layout_marginBottom="@dimen/margin_tip_text_top_bottom"
                        android:text="@string/text_plus_tip"
                        android:textColor="@color/tip_accent"
                        android:textSize="@dimen/text_size_22"
                        dimo:font="@string/font_montserrat"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_tip_text_top_bottom"
                            android:background="@color/theme_colorPrimaryDark">
                            <ImageButton
                                android:id="@+id/activity_tip_btn_clear"
                                android:layout_width="@dimen/image_size_icon_clear"
                                android:layout_height="@dimen/image_size_icon_clear"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_tip_text_top_bottom"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ico_circle_failed_yellow"
                                android:scaleType="fitXY"/>
                            <com.dimo.PayByQR.view.DIMOEditText
                                android:id="@+id/activity_tip_amount_edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/activity_tip_btn_clear"
                                android:layout_centerVertical="true"
                                android:gravity="right"
                                android:inputType="numberSigned"
                                android:background="@color/theme_colorPrimaryDark"
                                android:textCursorDrawable="@null"
                                android:text="Rp 0"
                                android:textColor="@color/theme_text_over_basic_bg"
                                android:textSize="@dimen/text_size_32"
                                dimo:font="@string/font_montserrat_bold"
                                android:visibility="visible"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.3dp"
                                android:background="@color/theme_text_over_basic_bg"
                                android:layout_toLeftOf="@id/activity_tip_btn_clear"
                                android:layout_alignBottom="@id/activity_tip_amount_edit"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"/>
                    <com.dimo.PayByQR.view.TriangleView
                        android:layout_width="32dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_tip_left_right"
                    android:paddingRight="@dimen/padding_tip_left_right"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:background="@color/theme_colorPrimaryDark">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="4dp">
                        <ImageButton
                            android:id="@+id/activity_tip_btn_tip_proposition1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:src="@drawable/background_money"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"/>
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/activity_tip_amount_proposition1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignBottom="@id/activity_tip_btn_tip_proposition1"
                            android:layout_marginBottom="8dp"
                            android:text="+ Rp 0"
                            android:textColor="@color/tip_accent"
                            android:textSize="@dimen/text_size_22"
                            dimo:font="@string/font_montserrat"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp">
                        <ImageButton
                            android:id="@+id/activity_tip_btn_tip_proposition2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:src="@drawable/background_money"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"/>
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/activity_tip_amount_proposition2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignBottom="@id/activity_tip_btn_tip_proposition2"
                            android:layout_marginBottom="8dp"
                            android:text="+ Rp 0"
                            android:textColor="@color/tip_accent"
                            android:textSize="@dimen/text_size_22"
                            dimo:font="@string/font_montserrat"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_tip_left_right"
                    android:paddingRight="@dimen/padding_tip_left_right"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/margin_tip_text_top_bottom"
                        android:layout_marginBottom="@dimen/margin_tip_text_top_bottom"
                        android:text="@string/text_tip_total"
                        android:textColor="@color/tip_text_total"
                        android:textSize="@dimen/text_size_22"
                        dimo:font="@string/font_montserrat"/>
                    <LinearLayout
                        android:id="@+id/activity_tip_paidAmount_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/activity_tip_paidAmount_curr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="@string/text_detail_currency"
                            android:textColor="@color/theme_text_over_basic_bg"
                            android:textSize="@dimen/text_size_24"
                            dimo:font="@string/font_montserrat"/>
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/activity_tip_paidAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/theme_text_over_basic_bg"
                            android:textSize="@dimen/text_size_40"
                            dimo:font="@string/font_montserrat_bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_tip_line2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/activity_invoiceDetail_line2"
            android:background="@color/theme_bg_gray">
            <ProgressBar
                android:id="@+id/activity_tip_loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:visibility="gone"/>
            <com.dimo.PayByQR.view.DIMOButton
                android:id="@+id/activity_tip_btn_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="36dp"
                android:paddingRight="36dp"
                android:text="@string/button_pay"
                android:textColor="@color/theme_text_over_basic_bg"
                dimo:bgColor="@color/theme_colorPrimary"
                dimo:buttonSize="big"
                dimo:font="@string/font_montserrat"
                android:visibility="visible"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
