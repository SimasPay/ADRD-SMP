<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.OfflineQRActivity"
    android:background="@color/theme_colorPrimary"
    android:orientation="vertical">

    <include layout="@layout/header_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="56dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_tip_text_top_bottom"
            android:background="@color/theme_colorPrimaryDark">
            <ImageButton
                android:id="@+id/activity_offlineQR_btn_clear"
                android:layout_width="@dimen/image_size_icon_clear"
                android:layout_height="@dimen/image_size_icon_clear"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_tip_text_top_bottom"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ico_circle_failed_yellow"
                android:scaleType="fitXY"/>
            <com.dimo.PayByQR.view.DIMOEditText
                android:id="@+id/activity_offlineQR_amount_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/activity_offlineQR_btn_clear"
                android:layout_centerVertical="true"
                android:inputType="numberSigned"
                android:gravity="right"
                android:background="@android:color/transparent"
                android:maxLength="14"
                android:textCursorDrawable="@null"
                android:text="Rp 0"
                android:textColor="@color/theme_text_over_basic_bg"
                android:textSize="@dimen/text_size_32"
                dimo:font="@string/font_montserrat_bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/theme_text_over_basic_bg"
                android:layout_toLeftOf="@id/activity_offlineQR_btn_clear"
                android:layout_alignBottom="@id/activity_offlineQR_amount_edit"
                android:visibility="visible"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
