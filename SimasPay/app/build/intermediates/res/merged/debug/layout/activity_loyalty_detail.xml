<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dimo.PayByQR.activity.LoyaltyDetailActivity"
    android:orientation="vertical">

    <include layout="@layout/header_bar" />

    <ScrollView
        android:id="@+id/activity_loyalty_detail_layout_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/activity_loyalty_detail_image"
                    android:layout_width="@dimen/image_size_loyalty_list_image"
                    android:layout_height="@dimen/image_size_loyalty_list_image"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:transitionName="@string/transition_name_loyalty_list_image"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/loyalty_list_no_image"
                    android:background="@drawable/background_loyalty_list_image"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/activity_loyalty_detail_image"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_loyalty_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:transitionName="@string/transition_name_loyalty_list_title"
                        android:text=""
                        android:textSize="@dimen/text_size_18"
                        android:textColor="@color/loyalty_list_title"
                        dimo:font="@string/font_helvetica"/>

                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_loyalty_detail_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/activity_loyalty_detail_title"
                        android:layout_marginBottom="8dp"
                        android:maxLines="5"
                        android:ellipsize="end"
                        android:transitionName="@string/transition_name_loyalty_list_desc"
                        android:text=""
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/loyalty_list_desc"
                        dimo:font="@string/font_helvetica_light"/>
                    <!-- android:text="Dapatkan 1 poin untuk setiap pembelanjaan Rp 50,000,-\nKumpulkan 10 poin dan dapatkan Voucher Rp 50,000,-" -->

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_bg_gray"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:background="@color/theme_bg_light_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_loyalty_detail_point_to_go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="@string/text_loyalty_detail_point_to_go"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/loyalty_list_desc"
                        android:lineSpacingExtra="4dp"
                        dimo:font="@string/font_helvetica"/>

                    <RelativeLayout
                        android:id="@+id/activity_loyalty_detail_progress_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/activity_loyalty_detail_point_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="0 poin"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/loyalty_list_desc"
                            dimo:font="@string/font_helvetica"/>

                        <RelativeLayout
                            android:id="@+id/activity_loyalty_detail_progress_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/activity_loyalty_detail_point_balance"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp" >
                            <ProgressBar
                                android:id="@+id/activity_loyalty_detail_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/progress_bar_height"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="1dp"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/background_progress_bar_loyalty_detail"/>
                            <View
                                android:id="@+id/activity_loyalty_detail_progress_line"
                                android:layout_width="1.5dp"
                                android:layout_height="@dimen/progress_bar_progress_height_detail"
                                android:background="@color/theme_colorPrimary" />

                        </RelativeLayout>

                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/activity_loyalty_detail_point_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/activity_loyalty_detail_progress_bar"
                            android:gravity="center"
                            android:text="0 poin"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/loyalty_list_desc"
                            dimo:font="@string/font_helvetica"/>
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/activity_loyalty_detail_point_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/activity_loyalty_detail_progress_bar"
                            android:gravity="center"
                            android:text="0 poin"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/loyalty_list_desc"
                            dimo:font="@string/font_helvetica"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="24dp"
                        android:paddingBottom="24dp"
                        android:background="@color/progress_bar_background"
                        android:orientation="vertical">

                        <com.dimo.PayByQR.view.DIMOTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"
                            android:text="@string/text_loyalty_detail_total_voucher"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/loyalty_list_title"
                            dimo:font="@string/font_helvetica"/>

                        <!--<com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/activity_loyalty_detail_total_voucher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text=""
                            android:textSize="@dimen/text_size_20"
                            android:textColor="@color/loyalty_list_title"
                            dimo:font="@string/font_helvetica"/>-->
                        <RelativeLayout
                            android:id="@+id/activity_loyalty_detail_voucher_block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/activity_loyalty_detail_voucher_box"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/margin_voucher_top"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:background="@drawable/background_voucher">
                                <com.dimo.PayByQR.view.DIMOTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/text_voucher"
                                    android:textSize="@dimen/text_size_14"
                                    android:textColor="@color/theme_colorPrimary"
                                    dimo:font="@string/font_montserrat"/>
                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="1dp"
                                    android:layout_margin="4dp"
                                    android:background="@color/theme_colorPrimary" />
                                <com.dimo.PayByQR.view.DIMOTextView
                                    android:id="@+id/activity_loyalty_detail_voucher_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/text_size_18"
                                    android:textStyle="bold"
                                    android:textColor="@color/theme_colorPrimary"
                                    dimo:font="@string/font_montserrat_bold"/>
                            </LinearLayout>
                            <com.dimo.PayByQR.view.DIMOTextView
                                android:id="@+id/activity_loyalty_detail_voucher_generated"
                                android:layout_width="@dimen/image_size_voucher_used_width"
                                android:layout_height="@dimen/image_size_voucher_used_height"
                                android:layout_alignRight="@id/activity_loyalty_detail_voucher_box"
                                android:layout_alignTop="@id/activity_loyalty_detail_voucher_box"
                                android:layout_marginRight="@dimen/margin_voucher_used_right"
                                android:layout_marginTop="@dimen/margin_voucher_used_top"
                                android:gravity="center"
                                android:background="@drawable/background_voucher_used"
                                android:text="x0"
                                android:textSize="@dimen/text_size_16"
                                android:textColor="@color/theme_text_over_basic_bg"
                                dimo:font="@string/font_montserrat"
                                android:visibility="visible"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_bg_gray"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:orientation="vertical">
                <com.dimo.PayByQR.view.DIMOTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="@string/text_loyalty_detail_syarat"
                    android:textSize="@dimen/text_size_18"
                    android:textColor="#000000"
                    dimo:font="@string/font_helvetica"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/text_loyalty_detail_info_expired_type_point"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/loyalty_detail_discount_info"
                        dimo:font="@string/font_helvetica_light"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_loyalty_detail_point_info_expired"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/loyalty_detail_discount_info_title"
                        dimo:font="@string/font_helvetica"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_loyalty_detail_point_info_membership_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/text_loyalty_detail_info_membership"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/loyalty_detail_discount_info"
                        dimo:font="@string/font_helvetica_light"/>
                    <!--<com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_loyalty_detail_point_info_membership"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/loyalty_detail_discount_info_title"
                        dimo:font="@string/font_helvetica"/>-->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/activity_loyalty_detail_layout_discount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:background="@color/loyalty_detail_discount_title_background">
            <com.dimo.PayByQR.view.DIMOTextView
                android:id="@+id/activity_loyalty_detail_title_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transitionName="@string/transition_name_loyalty_list_title"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/loyalty_detail_discount_title_color"
                dimo:font="@string/font_helvetica"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:orientation="vertical">
                <com.dimo.PayByQR.view.DIMOTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="@string/text_loyalty_detail_syarat"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    dimo:font="@string/font_helvetica"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/text_loyalty_detail_info_expired"
                        android:textSize="16sp"
                        android:textColor="@color/loyalty_detail_discount_info"
                        dimo:font="@string/font_helvetica_light"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_loyalty_detail_discount_info_expired"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/loyalty_detail_discount_info_title"
                        dimo:font="@string/font_helvetica"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/text_loyalty_detail_info_minimum"
                        android:textSize="16sp"
                        android:textColor="@color/loyalty_detail_discount_info"
                        dimo:font="@string/font_helvetica_light"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_loyalty_detail_discount_info_minimum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/loyalty_detail_discount_info_title"
                        dimo:font="@string/font_helvetica"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/text_loyalty_detail_info_maximum"
                        android:textSize="16sp"
                        android:textColor="@color/loyalty_detail_discount_info"
                        dimo:font="@string/font_helvetica_light"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_loyalty_detail_discount_info_max_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/loyalty_detail_discount_info_title"
                        dimo:font="@string/font_helvetica"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_loyalty_detail_discount_info_membership_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="@string/text_loyalty_detail_info_membership"
                        android:textSize="16sp"
                        android:textColor="@color/loyalty_detail_discount_info"
                        dimo:font="@string/font_helvetica_light"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
