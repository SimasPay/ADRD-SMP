<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="8dp">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"

        android:clickable="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_remove_circle"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:id="@+id/item_cart_image_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imageButton">

        <ImageView
            android:id="@+id/item_cart_image"
            android:layout_width="@dimen/image_size_loyalty_list_image"
            android:layout_height="@dimen/image_size_loyalty_list_image"
            android:layout_marginTop="@dimen/margin_loyalty_list_image_top"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/background_loyalty_list_image"/>

        <LinearLayout
            android:id="@+id/item_cart_discount_block"
            android:layout_width="@dimen/image_size_loyalty_list_discount"
            android:layout_height="@dimen/image_size_loyalty_list_discount"
            android:layout_alignTop="@id/item_cart_image"
            android:layout_alignRight="@id/item_cart_image"
            android:layout_marginTop="@dimen/margin_loyalty_list_discount_top_right"
            android:layout_marginRight="@dimen/margin_loyalty_list_discount_top_right"
            android:gravity="center"
            android:background="@drawable/background_circle_discount_loyalty_list"
            android:orientation="vertical"
            android:visibility="visible">
            <com.dimo.PayByQR.view.DIMOTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_discount"
                android:textColor="@color/theme_text_over_basic_bg"
                android:textSize="@dimen/text_size_loyalty_list_discount"
                dimo:font="@string/font_helvetica"/>
            <com.dimo.PayByQR.view.DIMOTextView
                android:id="@+id/item_cart_discount_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25%"
                android:textColor="@color/theme_text_over_basic_bg"
                android:textSize="@dimen/text_size_loyalty_list_title"
                dimo:font="@string/font_helvetica"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_cart_info_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/item_cart_image_block"
        android:layout_alignBottom="@id/item_cart_image_block"
        android:paddingBottom="2dp">
        <com.dimo.PayByQR.view.DIMOTextView
            android:id="@+id/item_cart_paidAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:gravity="right|bottom"
            android:text="Rp 105,000"
            android:textColor="@color/theme_black"
            android:textSize="@dimen/text_size_18"
            dimo:font="@string/font_helvetica"/>
        <com.dimo.PayByQR.view.DIMOTextView
            android:id="@+id/item_cart_originalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/item_cart_paidAmount"
            android:paddingRight="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="3 x Rp 35,000"
            android:textColor="@color/loyalty_list_title"
            android:textSize="@dimen/text_size_16"
            dimo:font="@string/font_helvetica_light"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_loyalty_list_image_top"
        android:layout_toRightOf="@id/item_cart_image_block">
        <com.dimo.PayByQR.view.DIMOTextView
            android:id="@+id/item_cart_qty"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_size_voucher_used_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:background="@drawable/background_item_cart_qty"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/theme_text_over_basic_bg"
            android:textSize="@dimen/text_size_18"
            dimo:font="@string/font_helvetica"/>
        <com.dimo.PayByQR.view.DIMOTextView
            android:id="@+id/item_cart_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/item_cart_qty"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:text="Cimory Yoghurt"
            android:textColor="@color/theme_black"
            android:textSize="@dimen/text_size_18"
            dimo:font="@string/font_helvetica"/>
    </RelativeLayout>
</RelativeLayout>