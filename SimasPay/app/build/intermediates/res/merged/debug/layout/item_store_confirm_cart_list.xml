<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
    <com.dimo.PayByQR.view.DIMOTextView
        android:id="@+id/cart_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text=""
        android:textColor="@color/store_text_checkout"
        android:textSize="@dimen/text_size_16"
        dimo:font="@string/font_helvetica"/>
    <com.dimo.PayByQR.view.DIMOTextView
        android:id="@+id/cart_list_item_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text=""
        android:textColor="@color/store_text_checkout"
        android:textSize="@dimen/text_size_16"
        dimo:font="@string/font_helvetica"/>
    <com.dimo.PayByQR.view.DIMOTextView
        android:id="@+id/cart_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cart_list_item_qty"
        android:layout_toLeftOf="@id/cart_list_item_price"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text=""
        android:textColor="@color/store_text_checkout"
        android:textSize="@dimen/text_size_16"
        dimo:font="@string/font_helvetica"/>
</RelativeLayout>