<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingRight="8dp">

    <ImageView
        android:id="@+id/item_cart_merchant"
        android:layout_width="@dimen/image_size_loyalty_list_image"
        android:layout_height="@dimen/image_size_loyalty_list_image"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@drawable/background_loyalty_list_image"/>

    <ImageView
        android:id="@+id/item_merchant_choose"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_chevron_right"/>

    <com.dimo.PayByQR.view.DIMOTextView
        android:id="@+id/item_merchant_qty"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/image_size_voucher_used_height"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_merchant_choose"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:singleLine="true"
        android:background="@drawable/background_item_cart_qty"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/theme_text_over_basic_bg"
        android:textSize="@dimen/text_size_18"
        dimo:font="@string/font_helvetica"/>

    <com.dimo.PayByQR.view.DIMOTextView
        android:id="@+id/item_merchant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_merchant_qty"
        android:layout_toRightOf="@id/item_cart_merchant"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        android:text="Merchant Name"
        android:textColor="@color/theme_black"
        android:textSize="@dimen/text_size_18"
        dimo:font="@string/font_helvetica"/>

