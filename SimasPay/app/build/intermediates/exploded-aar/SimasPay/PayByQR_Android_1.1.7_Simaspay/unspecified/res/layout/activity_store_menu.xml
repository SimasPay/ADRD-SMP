<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.dimo.PayByQR.QrStore.view.StoreMenuActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        dimo:contentInsetStart="0dp">
        <include layout="@layout/header_bar" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/activity_store_menu_layout_empty_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/activity_store_mercanttx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
            <com.dimo.PayByQR.view.DIMOTextView
                android:id="@+id/store_empt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:lineSpacingExtra="4dp"
                android:lineSpacingMultiplier="1.5"
                android:gravity="center"
                android:text="@string/tx_store_empty_1"
                android:textSize="16dp"
                android:textColor="@color/no_connection_button_close"
                android:drawablePadding="4dp"
                android:background="@drawable/background_rect_gray"
                dimo:font="@string/font_helvetica"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical">
            <com.dimo.PayByQR.view.DIMOButton
                android:id="@+id/activity_store_mulai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:paddingLeft="48dp"
                android:paddingRight="48dp"
                android:text="@string/bt_store_start_shop"
                android:textColor="@color/theme_text_over_basic_bg"
                dimo:bgColor="@color/theme_colorPrimary"
                dimo:dimoButtonSize="normal"
                dimo:font="@string/font_helvetica"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_store_menu_layout_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@android:color/white"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/activity_store_menu_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/store_cart_footer_bg"
            android:elevation="6dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <com.dimo.PayByQR.view.DIMOTextView
                    android:id="@+id/activity_store_menu_total_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="Rp 0"
                    android:textColor="@color/store_cart_item_name"
                    android:textSize="16dp"
                    dimo:font="@string/font_helvetica_medium"/>
                <com.dimo.PayByQR.view.DIMOTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/activity_store_menu_total_paid"
                    android:paddingRight="8dp"
                    android:gravity="left"
                    android:text="@string/tx_store_pre_total"
                    android:textColor="@color/store_cart_item_name"
                    android:textSize="16dp"
                    dimo:font="@string/font_helvetica"/>
            </RelativeLayout>
            <com.dimo.PayByQR.view.DIMOButton
                android:id="@+id/activity_store_menu_btn_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:text="@string/bt_store_checkout"
                android:textColor="@android:color/white"
                android:drawablePadding="4dp"
                dimo:bgColor="@color/theme_colorPrimary"
                dimo:dimoButtonSize="normal"
                dimo:font="@string/font_helvetica"/>
        </LinearLayout>
        <ListView
            android:id="@+id/listview"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@id/activity_store_menu_footer"
            android:dividerHeight="1dp"
            android:divider="@color/store_line_checkout"/>
    </RelativeLayout>
</LinearLayout>