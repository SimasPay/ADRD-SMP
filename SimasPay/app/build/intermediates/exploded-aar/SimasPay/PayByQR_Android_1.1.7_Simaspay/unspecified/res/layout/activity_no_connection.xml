<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no_connection_background"
    android:fitsSystemWindows="true"
    tools:context="com.dimo.PayByQR.activity.NoConnectionActivity">

    <LinearLayout
        android:id="@+id/footer_service_by_dimo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/theme_black"
        android:weightSum="1">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:adjustViewBounds="true"
            android:src="@drawable/servicebydimo"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer_service_by_dimo"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/image_size_icon_no_connection"
                android:layout_height="@dimen/image_size_icon_no_connection"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:src="@drawable/no_connection"/>
            <com.dimo.PayByQR.view.DIMOTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:text="@string/error_no_connection_title"
                android:textColor="@color/no_connection_button_retry"
                android:textSize="@dimen/text_size_24"
                dimo:font="@string/font_montserrat"/>
            <com.dimo.PayByQR.view.DIMOButton
                android:id="@+id/activity_noConnection_btn_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/button_retry"
                android:textColor="@color/no_connection_button_close"
                dimo:bgColor="@color/no_connection_button_retry"
                dimo:dimoButtonSize="big"
                dimo:font="@string/font_montserrat"/>
            <com.dimo.PayByQR.view.DIMOButton
                android:id="@+id/activity_noConnection_btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:paddingLeft="56dp"
                android:paddingRight="56dp"
                android:text="@string/button_exit"
                android:textColor="@color/no_connection_button_retry"
                dimo:bgColor="@color/no_connection_button_close"
                dimo:dimoButtonSize="big"
                dimo:font="@string/font_montserrat"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
