<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dimo.PayByQR"
    android:versionCode="1"
    android:versionName="1.1.7" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:largeHeap="true" >
        <activity
            android:name="com.dimo.PayByQR.activity.SplashActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent" />
        <activity
            android:name="com.dimo.PayByQR.activity.ScanQRActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent" />
        <activity
            android:name="com.dimo.PayByQR.activity.InvoiceDetailActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent" />
        <activity
            android:name="com.dimo.PayByQR.activity.PaymentSuccessActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent" />
        <activity
            android:name="com.dimo.PayByQR.activity.FailedActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent" />
        <activity
            android:name="com.dimo.PayByQR.activity.NoConnectionActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent" />
        <activity
            android:name="com.dimo.PayByQR.activity.TipActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent" />

        <!-- - QR STORE -->
        <activity
            android:name="com.dimo.PayByQR.QrStore.view.StoreMenuActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent" />
        <activity
            android:name="com.dimo.PayByQR.QrStore.view.StoreDetailActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent" />
        <activity
            android:name="com.dimo.PayByQR.QrStore.view.StoreCheckout1"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.dimo.PayByQR.QrStore.view.StoreCheckout2"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.dimo.PayByQR.QrStore.view.StoreKonfirmasiActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent" />
        <activity
            android:name="com.dimo.PayByQR.QrStore.view.StoreMenuMerchant"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent" />
        <!-- QR STORE END -->

        <activity
            android:name="com.dimo.PayByQR.activity.LoyaltyActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent" />
        <activity
            android:name="com.dimo.PayByQR.activity.LoyaltyDetailActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent" />
        <activity
            android:name="com.dimo.PayByQR.activity.OfflineQRActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"
            android:theme="@style/PayByQRTheme.NoActionBar.Translucent"
            android:windowSoftInputMode="stateVisible" />
    </application>

</manifest>