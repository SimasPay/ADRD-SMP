<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/theme_colorPrimary"
    android:orientation="vertical"
    android:minWidth="320dp"
    xmlns:dimo="http://schemas.android.com/apk/res-auto">

    <com.dimo.PayByQR.view.DIMOTextView
        android:id="@+id/dialog_alternate_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:text="@string/alertdialog_title_info"
        android:textSize="@dimen/text_size_20"
        android:textColor="@color/theme_text_over_basic_bg"
        android:textStyle="bold"
        android:background="@android:color/black"
        android:visibility="visible"
        dimo:font="@string/font_helvetica" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.dimo.PayByQR.view.DIMOTextView
                android:id="@+id/dialog_alternate_text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:text="Pembayaran Berhasil !\ndari rek xxx1234 ke merchant\n1234567/Pay by QR\nRp 100,000 tgl 1/6/16 10:00\nno ref: 1234567890\ninv: asdf1234qwerty"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/theme_text_over_basic_bg"
                dimo:font="@string/font_helvetica"/>

            <LinearLayout
                android:id="@+id/dialog_alternate_loyalty_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@color/theme_text_over_basic_bg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/dialog_alternate_text_fidelitiz1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/text_info_fidelitiz1"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/theme_text_over_basic_bg"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/dialog_alternate_text_fidelitiz2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/text_info_fidelitiz2"
                        android:textSize="@dimen/text_size_18"
                        android:textColor="@color/theme_text_over_basic_bg"
                        android:visibility="gone"
                        dimo:font="@string/font_helvetica"/>
                    <RelativeLayout
                        android:id="@+id/dialog_alternate_fidelitiz_progress_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp">
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/dialog_alternate_fidelitiz_point_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="0 poin"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/progress_bar_progress"
                            dimo:font="@string/font_helvetica"/>

                        <RelativeLayout
                            android:id="@+id/dialog_alternate_fidelitiz_progress_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/dialog_alternate_fidelitiz_point_balance"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp" >
                            <ProgressBar
                                android:id="@+id/dialog_alternate_fidelitiz_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/progress_bar_height"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="1dp"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/background_progress_bar"/>
                            <View
                                android:id="@+id/dialog_alternate_fidelitiz_progress_line"
                                android:layout_width="1dp"
                                android:layout_height="@dimen/progress_bar_progress_height"
                                android:background="@color/progress_bar_progress" />

                        </RelativeLayout>

                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/dialog_alternate_fidelitiz_point_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/dialog_alternate_fidelitiz_progress_bar"
                            android:gravity="center"
                            android:text="0 poin"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/progress_bar_progress"
                            dimo:font="@string/font_helvetica"/>
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/dialog_alternate_fidelitiz_point_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/dialog_alternate_fidelitiz_progress_bar"
                            android:gravity="center"
                            android:text="0 poin"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/progress_bar_progress"
                            dimo:font="@string/font_helvetica"/>
                    </RelativeLayout>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/dialog_alternate_text_fidelitiz3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/text_info_fidelitiz3"
                        android:lineSpacingMultiplier="1"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/theme_text_over_basic_bg"
                        dimo:font="@string/font_helvetica"/>

                    <RelativeLayout
                        android:id="@+id/dialog_alternate_voucher_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">
                        <LinearLayout
                            android:id="@+id/dialog_alternate_voucher_box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_voucher_top"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@drawable/background_voucher_success">
                            <com.dimo.PayByQR.view.DIMOTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_voucher"
                                android:textSize="@dimen/text_size_14"
                                android:textColor="@color/progress_bar_progress"
                                dimo:font="@string/font_montserrat"/>
                            <View
                                android:layout_width="100dp"
                                android:layout_height="1dp"
                                android:layout_margin="4dp"
                                android:background="@color/progress_bar_progress" />
                            <com.dimo.PayByQR.view.DIMOTextView
                                android:id="@+id/dialog_alternate_voucher_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/text_size_18"
                                android:textStyle="bold"
                                android:textColor="@color/progress_bar_progress"
                                dimo:font="@string/font_montserrat_bold"/>
                        </LinearLayout>
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/dialog_alternate_voucher_generated"
                            android:layout_width="@dimen/image_size_voucher_used_width"
                            android:layout_height="@dimen/image_size_voucher_used_height"
                            android:layout_alignRight="@id/dialog_alternate_voucher_box"
                            android:layout_alignTop="@id/dialog_alternate_voucher_box"
                            android:layout_marginRight="@dimen/margin_voucher_used_right"
                            android:layout_marginTop="@dimen/margin_voucher_used_top"
                            android:gravity="center"
                            android:background="@drawable/background_voucher_used_success"
                            android:text="x0"
                            android:textSize="@dimen/text_size_16"
                            android:textColor="@color/success_txt_voucher_generated"
                            dimo:font="@string/font_montserrat"
                            android:visibility="visible"/>
                    </RelativeLayout>
                </LinearLayout>

                <com.dimo.PayByQR.view.DIMOButton
                    android:id="@+id/dialog_alternate_btn_loyalty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:paddingLeft="36dp"
                    android:paddingRight="36dp"
                    android:textAllCaps="false"
                    android:text="@string/button_cek_loyalty"
                    android:textColor="@color/progress_bar_progress"
                    dimo:bgColor="@color/theme_btn_loyalty"
                    dimo:dimoButtonSize="small"
                    dimo:font="@string/font_montserrat"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.dimo.PayByQR.view.DIMOButton
        android:id="@+id/dialog_alternate_btn_OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:text="@string/alertdialog_posBtn_close"
        android:textColor="@color/theme_colorPrimary"
        dimo:bgColor="@color/theme_btn_OK"
        dimo:dimoButtonSize="normal"
        dimo:font="@string/font_montserrat"/>
</LinearLayout>