<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.dimo.PayByQR.QrStore.view.StoreDetailActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        dimo:contentInsetStart="0dp" >
        <include layout="@layout/header_bar" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/background_rect_border_rounded_light">
                <ImageView
                    android:id="@+id/imagecart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:src="@drawable/loyalty_list_no_image"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <LinearLayout
                    android:id="@+id/qrstore_detail_discount_block"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:background="@drawable/background_circle_discount_loyalty_list"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_discount"
                        android:layout_marginBottom="2dp"
                        android:textColor="@android:color/white"
                        android:textSize="10dp"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/qrstore_detail_discount_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@android:color/white"
                        android:textSize="18dp"
                        dimo:font="@string/font_helvetica_medium"/>
                </LinearLayout>
            </RelativeLayout>

            <com.dimo.PayByQR.view.DIMOTextView
                android:id="@+id/store_name_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="left"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:text="(Goods Name)"
                android:textColor="@color/store_cart_item_name"
                android:textSize="16dp"
                dimo:font="@string/font_helvetica_light" />

            <RelativeLayout
                android:id="@+id/qrstore_detail_disc_price_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <com.dimo.PayByQR.view.DIMOTextView
                    android:id="@+id/qrstore_detail_disc_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="Rp 0"
                    android:textColor="@color/store_cart_item_name"
                    android:textSize="14dp"
                    dimo:font="@string/font_helvetica" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@id/qrstore_detail_disc_price"
                    android:layout_alignRight="@id/qrstore_detail_disc_price"
                    android:background="@color/store_cart_item_name"/>
            </RelativeLayout>
            <com.dimo.PayByQR.view.DIMOTextView
                android:id="@+id/qrstore_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Rp 0"
                android:textColor="@color/store_cart_item_name"
                android:textSize="18dp"
                dimo:font="@string/font_helvetica_medium" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:background="#e6e6e6"/>

            <com.dimo.PayByQR.view.DIMOTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/tx_store_item_detail_description"
                android:textColor="@color/store_cart_item_name"
                android:textSize="14dp"
                dimo:font="@string/font_helvetica" />

            <com.dimo.PayByQR.view.DIMOTextView
                android:id="@+id/qrstore_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Description Here)"
                android:textColor="@color/store_cart_item_name"
                android:textSize="14dp"
                dimo:font="@string/font_helvetica_light" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>