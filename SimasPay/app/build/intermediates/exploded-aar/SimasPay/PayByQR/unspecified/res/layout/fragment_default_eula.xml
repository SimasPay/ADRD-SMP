<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_light_gray"
    tools:context="com.dimo.PayByQR.activity.DefaultEULAFragment">

    <LinearLayout
        android:id="@+id/fragment_eula_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/padding_eula_header_top_bottom"
        android:paddingBottom="@dimen/padding_eula_header_top_bottom"
        android:background="@color/theme_colorPrimary"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/fragment_eula_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:adjustViewBounds="true"
                android:src="@drawable/paybyqr_horizontal"/>
        </LinearLayout>

        <com.dimo.PayByQR.view.DIMOTextView
            android:id="@+id/fragment_eula_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:text="@string/text_EULA_title"
            android:textSize="@dimen/text_size_24"
            android:textColor="@color/theme_text_over_basic_bg"
            dimo:font="@string/font_montserrat"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_eula_footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/padding_eula_header_top_bottom"
        android:paddingBottom="@dimen/padding_eula_header_top_bottom"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center">
            <com.dimo.PayByQR.view.DIMOButton
                android:id="@+id/fragment_eula_btn_decline"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/button_EULA_decline"
                android:textColor="@color/theme_text_over_basic_bg"
                dimo:bgColor="@color/theme_btn_tip"
                dimo:buttonSize="normal"
                dimo:font="@string/font_montserrat"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center">
            <com.dimo.PayByQR.view.DIMOButton
                android:id="@+id/fragment_eula_btn_accept"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/button_EULA_accept"
                android:textColor="@color/theme_text_over_basic_bg"
                dimo:bgColor="@color/theme_colorPrimary"
                dimo:buttonSize="normal"
                dimo:font="@string/font_montserrat"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_eula_header_layout"
        android:layout_above="@id/fragment_eula_footer_layout"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@drawable/background_rect_white">
        <WebView
            android:id="@+id/fragment_eula_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
