<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dimo.PayByQR.QrStore.view.StoreDetailActivity">

    <include layout="@layout/header_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:background="@color/theme_bg_light_gray"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/activity_invoiceDetail_line1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@android:color/white" >
            <ImageView
                android:id="@+id/imagecart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/loyalty_list_no_image"
                android:scaleType="fitCenter" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@color/store_detail_info_background">
                <LinearLayout
                    android:id="@+id/qrstore_detail_price_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/qrstore_detail_disc_price_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:visibility="visible">
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/qrstore_detail_disc_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:gravity="right"
                            android:text="Rp 0"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_20"
                            dimo:font="@string/font_helvetica" />
                        <com.dimo.PayByQR.view.DiagonalLineView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/qrstore_detail_disc_price"
                            android:layout_alignBottom="@id/qrstore_detail_disc_price"
                            android:layout_alignRight="@id/qrstore_detail_disc_price"
                            android:layout_alignTop="@id/qrstore_detail_disc_price"/>
                    </RelativeLayout>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/qrstore_detail_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Rp 0"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_22"
                        dimo:font="@string/font_helvetica" />
                </LinearLayout>

                <com.dimo.PayByQR.view.DIMOTextView
                    android:id="@+id/store_name_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/qrstore_detail_price_block"
                    android:layout_centerVertical="true"
                    android:paddingRight="8dp"
                    android:gravity="left"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="4dp"
                    android:text="(Item name here)"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_22"
                    dimo:font="@string/font_helvetica" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/white">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/activity_storeDetail_btn_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_remove"
                        android:scaleType="fitXY"/>
                </LinearLayout>
                <com.dimo.PayByQR.view.DIMOTextView
                    android:id="@+id/qrstore_detail_quantity_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/theme_black"
                    android:textSize="@dimen/text_size_24"
                    dimo:font="@string/font_helvetica" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/activity_storeDetail_btn_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_add"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.dimo.PayByQR.view.DIMOButton
                    android:id="@+id/activity_storeDetail_btn_addtocart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingLeft="36dp"
                    android:paddingRight="36dp"
                    android:text="@string/bt_store_add_to_cart"
                    android:textColor="@color/theme_text_over_basic_bg"
                    dimo:bgColor="@color/theme_colorPrimary"
                    dimo:buttonSize="big"
                    dimo:font="@string/font_helvetica"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>