<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dimo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dimo.PayByQR.activity.PaymentSuccessActivity">

    <LinearLayout
        android:id="@+id/footer_service_by_dimo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/theme_black"
        android:weightSum="1">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:adjustViewBounds="true"
            android:src="@drawable/aserviceby"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer_service_by_dimo"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="@color/theme_colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/image_size_icon_payment_success"
                android:layout_height="@dimen/image_size_icon_payment_success"
                android:layout_marginBottom="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/ico_circle_success"/>

            <com.dimo.PayByQR.view.DIMOTextView
                android:id="@+id/activity_success_text_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="@string/text_payment_success"
                android:textSize="@dimen/text_size_24"
                android:textColor="@color/theme_text_over_basic_bg"
                android:textStyle="bold"
                dimo:font="@string/font_helvetica"/>

            <LinearLayout
                android:id="@+id/activity_success_loyalty_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@drawable/background_rect_primary_dark">
                <com.dimo.PayByQR.view.DIMOTextView
                    android:id="@+id/activity_success_text_fidelitiz1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_info_fidelitiz1"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/theme_text_over_basic_bg"
                    dimo:font="@string/font_helvetica"/>
                <com.dimo.PayByQR.view.DIMOTextView
                    android:id="@+id/activity_success_text_fidelitiz2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_info_fidelitiz2"
                    android:textSize="@dimen/text_size_18"
                    android:textColor="@color/theme_text_over_basic_bg"
                    android:visibility="gone"
                    dimo:font="@string/font_helvetica"/>
                <RelativeLayout
                    android:id="@+id/activity_success_fidelitiz_progress_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_success_fidelitiz_point_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="0 poin"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/progress_bar_progress"
                        dimo:font="@string/font_helvetica"/>

                    <RelativeLayout
                        android:id="@+id/activity_success_fidelitiz_progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/activity_success_fidelitiz_point_balance"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp" >
                        <ProgressBar
                            android:id="@+id/activity_success_fidelitiz_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/progress_bar_height"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="1dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/background_progress_bar"/>
                        <View
                            android:id="@+id/activity_success_fidelitiz_progress_line"
                            android:layout_width="1dp"
                            android:layout_height="@dimen/progress_bar_progress_height"
                            android:background="@color/progress_bar_progress" />

                    </RelativeLayout>

                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_success_fidelitiz_point_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/activity_success_fidelitiz_progress_bar"
                        android:gravity="center"
                        android:text="0 poin"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/progress_bar_progress"
                        dimo:font="@string/font_helvetica"/>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_success_fidelitiz_point_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/activity_success_fidelitiz_progress_bar"
                        android:gravity="center"
                        android:text="0 poin"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/progress_bar_progress"
                        dimo:font="@string/font_helvetica"/>
                </RelativeLayout>
                <com.dimo.PayByQR.view.DIMOTextView
                    android:id="@+id/activity_success_text_fidelitiz3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_info_fidelitiz3"
                    android:lineSpacingMultiplier="1"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/theme_text_over_basic_bg"
                    dimo:font="@string/font_helvetica"/>

                <RelativeLayout
                    android:id="@+id/activity_success_voucher_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <LinearLayout
                        android:id="@+id/activity_success_voucher_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_voucher_top"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/background_voucher_success">
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_voucher"
                            android:textSize="@dimen/text_size_14"
                            android:textColor="@color/progress_bar_progress"
                            dimo:font="@string/font_montserrat"/>
                        <View
                            android:layout_width="100dp"
                            android:layout_height="1dp"
                            android:layout_margin="4dp"
                            android:background="@color/progress_bar_progress" />
                        <com.dimo.PayByQR.view.DIMOTextView
                            android:id="@+id/activity_success_voucher_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/text_size_18"
                            android:textStyle="bold"
                            android:textColor="@color/progress_bar_progress"
                            dimo:font="@string/font_montserrat_bold"/>
                    </LinearLayout>
                    <com.dimo.PayByQR.view.DIMOTextView
                        android:id="@+id/activity_success_voucher_generated"
                        android:layout_width="@dimen/image_size_voucher_used_width"
                        android:layout_height="@dimen/image_size_voucher_used_height"
                        android:layout_alignRight="@id/activity_success_voucher_box"
                        android:layout_alignTop="@id/activity_success_voucher_box"
                        android:layout_marginRight="@dimen/margin_voucher_used_right"
                        android:layout_marginTop="@dimen/margin_voucher_used_top"
                        android:gravity="center"
                        android:background="@drawable/background_voucher_used_success"
                        android:text="x0"
                        android:textSize="@dimen/text_size_16"
                        android:textColor="@color/success_txt_voucher_generated"
                        dimo:font="@string/font_montserrat"
                        android:visibility="visible"/>
                </RelativeLayout>

                <com.dimo.PayByQR.view.DIMOButton
                    android:id="@+id/activity_success_btn_loyalty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="36dp"
                    android:paddingRight="36dp"
                    android:textAllCaps="false"
                    android:text="@string/button_cek_loyalty"
                    android:textColor="@color/progress_bar_progress"
                    dimo:bgColor="@color/theme_btn_loyalty"
                    dimo:buttonSize="small"
                    dimo:font="@string/font_montserrat"/>
            </LinearLayout>

            <com.dimo.PayByQR.view.DIMOButton
                android:id="@+id/activity_success_btn_OK"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/alertdialog_posBtn_ok"
                android:textColor="@color/theme_colorPrimary"
                dimo:bgColor="@color/theme_btn_OK"
                dimo:buttonSize="big"
                dimo:font="@string/font_montserrat"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
